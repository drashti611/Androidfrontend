<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

    <!-- Background light blue -->
    <solid android:color="#1190ED" /> <!-- Material Light Blue 100 -->

    <!-- Rounded corners -->
    <corners android:radius="20dp" />

    <!-- Subtle border -->
    <stroke
        android:width="1.5dp"
        android:color="#08406D" />  <!-- Material Light Blue 300 -->

    <!-- Optional shadow padding (usually not needed in CardView) -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
